// script.js

document.getElementById("bmiForm").addEventListener("submit", function (e) {
  e.preventDefault();

  // Ambil nilai input
  const weight = parseFloat(document.getElementById("weight").value);
  const height = parseFloat(document.getElementById("height").value) / 100; // ubah cm ke meter

  // Cek apakah input valid
  if (isNaN(weight) || isNaN(height) || weight <= 0 || height <= 0) {
    alert("Masukkan nilai yang valid");
    return;
  }

  // Hitung BMI
  const bmi = weight / (height * height);

  // Tentukan kategori BMI
  let category = "";
  if (bmi < 18.5) {
    category = "Kurus";
  } else if (bmi >= 18.5 && bmi < 24.9) {
    category = "Normal";
  } else if (bmi >= 25 && bmi < 29.9) {
    category = "Gemuk";
  } else {
    category = "Obesitas";
  }

  // Tampilkan hasil
  document.getElementById("result").style.display = "block";
  document.getElementById("bmiValue").textContent = `BMI: ${bmi.toFixed(2)}`;
  document.getElementById("category").textContent = `Kategori: ${category}`;
});
